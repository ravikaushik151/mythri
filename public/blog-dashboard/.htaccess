RewriteEngine On

# 1️⃣ Redirect .php URLs → clean URLs
RewriteCond %{THE_REQUEST} \s/+blog-dashboard/([^.]+)\.php[\s?]
RewriteRule ^ %1 [R=301,L]

# 2️⃣ Internally map clean URL → .php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([a-zA-Z0-9_-]+)/?$ $1.php [L]
